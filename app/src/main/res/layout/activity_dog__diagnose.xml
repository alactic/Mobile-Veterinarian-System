<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.elvis.petapps.Dog_Diagnose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT SYMPTOM AREA"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_dog_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOUTH"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_dog_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EYES"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_dog_ear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EAR"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_dog_skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIN"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_dog_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEGS"
            android:onClick="onRadioButtonClicked"
            android:layout_marginBottom="70dp"/>
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Symptom is your Dog Having:"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dog_edit_symptom"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIAGNOSE"
        android:id="@+id/dog_diagnose_symptom"
        android:layout_marginBottom="20dp"/>
    </LinearLayout>
</ScrollView>
